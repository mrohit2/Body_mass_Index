<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rohit.body_mass_index.First_Activity">

    <EditText
        android:id="@+id/e1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:hint="@string/height"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/b1"
        android:layout_alignEnd="@+id/b1"/>



    <EditText
        android:id="@+id/e2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:hint="@string/weight"
        android:inputType="numberDecimal"



        android:layout_below="@+id/e1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/e1"
        android:layout_alignEnd="@+id/e1" > </EditText>

    <ImageButton
        android:id="@+id/b1"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginLeft="39dp"
        android:text="@string/reset"
        android:src="@mipmap/reset"
        android:contentDescription="@string/reset"
        android:layout_marginStart="39dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/b2"
        android:layout_toEndOf="@+id/b2" />
    <ImageButton
        android:id="@+id/b2"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="@string/submit"
        android:src="@mipmap/sub"
        android:contentDescription="@string/submit"
        android:layout_alignTop="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/e2"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_alignRight="@+id/e2"
        android:layout_alignEnd="@+id/e2" />

</RelativeLayout>
